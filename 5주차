1
import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          title: Text('정사각형 안에 빨강, 노랑, 파랑, 검정, 주황'),
        ),
        body: Center(
          child: CustomPaint(
            size: Size(200, 200),
            painter: MultiColorSquarePainter(),
          ),
        ),
      ),
    );
  }
}

class MultiColorSquarePainter extends CustomPainter {
  @override
  void paint(Canvas canvas, Size size) {
    final paint = Paint();

    paint.color = Colors.red;
    canvas.drawRect(Rect.fromLTWH(0, 0, size.width / 2, size.height / 2), paint);

    paint.color = Colors.yellow;
    canvas.drawRect(Rect.fromLTWH(size.width / 2, 0, size.width / 2, size.height / 2), paint);

    paint.color = Colors.blue;
    canvas.drawRect(Rect.fromLTWH(0, size.height / 2, size.width / 3, size.height / 2), paint);

    paint.color = Colors.black;
    canvas.drawRect(Rect.fromLTWH(size.width / 3, size.height / 2, size.width / 3, size.height / 2), paint);

    paint.color = Colors.orange;
    canvas.drawRect(Rect.fromLTWH(2 * size.width / 3, size.height / 2, size.width / 3, size.height / 2), paint);
  }

  @override
  bool shouldRepaint(covariant CustomPainter oldDelegate) {
    return false;
  }
}

